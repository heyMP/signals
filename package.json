{
  "description": "",
  "private": true,
  "repository": {
    "type": "git",
    "url": "https://github.com/heyMP/signals"
  },
  "scripts": {
    "build": "wireit",
    "release": "wireit",
    "precompress": "wireit",
    "postcompress": "wireit"
  },
  "wireit": {
    "build": {
      "command": "npm run build --workspace=@heymp/signals"
    },
    "release": {
      "command": "npx @changesets/cli publish",
      "dependencies": ["build"]
    },
    "precompress": {
      "dependencies": ["precompress:readme"]
    },
    "postcompress": {
      "dependencies": ["postcompress:readme"]
    },
    "precompress:readme": {
      "command": "cp README.md packages/signals/"
    },
    "precompress:readme": {
      "command": "rm packages/signals/README.md"
    }
  },
  "keywords": [],
  "license": "ISC",
  "workspaces": [
    "packages/*"
  ],
  "devDependencies": {
    "@changesets/cli": "^2.27.7",
    "wireit": "^0.14.4"
  }
}
