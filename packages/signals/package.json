{
  "name": "@heymp/signals",
  "version": "0.0.1",
  "type": "module",
  "main": "src/index.js",
  "module": "src/index.js",
  "types": "src/index.d.ts",
  "publishConfig": {
    "access": "public"
  },
  "exports": {
    ".": {
      "types": "./src/index.d.ts",
      "default": "./src/index.js"
    },
    "./lit": {
      "types": "./src/lib/lit/decorators/watchSignal.d.ts",
      "default": "./src/lib/lit/decorators/watchSignal.js"
    },
    "./lit/*": "./src/lib/lit/*"
  },
  "files": [
    "src/*{.d.ts,.js}"
  ],
  "scripts": {
    "dev": "tsc --watch",
    "build": "tsc"
  },
  "devDependencies": {
    "tslib": "^2.6.2",
    "typescript": "^5.2.2"
  }
}
