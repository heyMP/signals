{
  "name": "@heymp/signals",
  "version": "0.0.0",
  "type": "module",
  "main": "src/index.js",
  "module": "src/index.js",
  "types": "src/index.d.ts",
  "publishConfig": {
    "access": "public"
  },
  "exports": {
    ".": {
      "types": "./src/index.d.ts",
      "default": "./src/index.js"
    },
    "./lit": {
      "types": "./src/lib/lit/decorators/watchSignal.d.ts",
      "default": "./src/lib/lit/decorators/watchSignal.js"
    },
    "./lit/*": "./src/lib/lit/*",
    "./react": {
      "types": "./src/lib/react/useSignal.d.ts",
      "default": "./src/lib/react/useSignal.js"
    }
  },
  "files": [
    "src/**/*{.d.ts,.js}"
  ],
  "scripts": {
    "dev": "tsc --watch",
    "build": "tsc",
    "prepack": "wireit",
    "postpack": "wireit"
  },
  "wireit": {
    "prepack": {
      "command": "cp ../../README.md .",
      "dependencies": [
        "build"
      ]
    },
    "postpack": {
      "command": "rm README.md"
    }
  },
  "devDependencies": {
    "tslib": "^2.6.2",
    "typescript": "^5.2.2"
  },
  "peerDependencies": {
    "@types/react": "^18.2.23",
    "react": "^18.2.0"
  }
}
